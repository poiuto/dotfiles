clear lock
clear control
clear mod1

keycode  64 = Alt_L Meta_L
keycode  37 = Control_L
keycode 105 = Alt_L

add mod1    = Alt_L Alt_R Meta_L Meta_R
add mod4    = Super_L Super_R
add control = Control_L Control_R

keycode 108 = Mode_switch

keysym h = h H Left
keysym j = j J Down
keysym k = k K Up
keysym l = l L Right
keysym m = m M Home
keysym comma = comma less End
keysym u = u U Prior
keysym i = i I Next
keysym o = o O Insert
